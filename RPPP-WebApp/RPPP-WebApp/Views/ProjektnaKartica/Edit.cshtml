@model RPPP_WebApp.Models.ProjektnaKartica

@{
    ViewBag.Title = "Ažuriranje projektne kartice";
}

<form asp-route-id="@Model.SubjektIban"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Saldo"></label>
        <div><span asp-validation-for="Saldo" class="text-danger"></span></div>
        <input asp-for="Saldo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Valuta"></label>
        <div><span asp-validation-for="Valuta" class="text-danger"></span></div>
        <input asp-for="Valuta" class="form-control" />
    </div>
 
    <div class="form-group">
        <label asp-for="VrijemeOtvaranja"></label>
        <div><span asp-validation-for="VrijemeOtvaranja" class="text-danger"></span></div>
        <input asp-for="VrijemeOtvaranja" class="form-control" />
    </div>

    @*Potencijalno treba maknuti*@
    <div class="mb-3">
        <label asp-for="IdProjekt" class="form-label">Status zadatka</label>
        <select class="form-control" asp-for="IdProjekt" asp-items="ViewBag.ZadatciStatusi">
            <option disabled selected value="">Odaberite status</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdProjekt" class="text-danger"></span></div>
    </div>


    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>

