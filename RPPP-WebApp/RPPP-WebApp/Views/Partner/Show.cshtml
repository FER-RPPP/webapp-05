 @model RPPP_WebApp.Controllers.PartnerSuradnikViewModel
@{
    ViewBag.Title = "Partner br. " + @Model.partner.IdPartner;
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-2">
            @if (Model.IdPrethPartner != -1)
            {
                <a class="btn btn-sm btn-primary"
                    asp-action="Show"
                    asp-route-page="@ViewBag.Page"
                    asp-route-sort="@ViewBag.Sort"
                    asp-route-ascending="@ViewBag.Ascending"
                    asp-route-id="@Model.IdPrethPartner">
                        <i class="fas fa-step-backward">prethodni</i>
                </a>
            }
        </div>
        <div class="col-sm-8">
            <h4>
                @Model.partner.IdPartner/@Model.partner.Oib/@Model.TipPartnera/@Model.partner.EmailPartner
            </h4>
        </div>
        <div class="col-sm-2">
            @if (Model.IdSljedPartner != -1)
            {
                <a class="btn btn-sm btn-primary" asp-action="Show"
                    asp-route-page="@ViewBag.Page"
                    asp-route-sort="@ViewBag.Sort"
                    asp-route-ascending="@ViewBag.Ascending"
                    asp-route-id="@Model.IdSljedPartner">
                        <i class="fas fa-step-forward">sljedeci</i>
                </a>
            }
        </div>
    </div>

    @if (Model.IdPrethPartner != -1)
    {
        <div class="row justify-content-sm-center">
            <div class="col-sm-2">
                Prethodni partner:
            </div>
            <div class="col-sm-6">
                <a asp-action="Show" asp-route-id="@Model.IdPrethPartner" target="_blank">@Model.IdPrethPartner</a>
            </div>
        </div>
    }

    <div class="row justify-content-sm-center">
        <div class="col-sm-2">
            Email: @Model.partner.EmailPartner
        </div>
        <div class="col-sm-2">
            Naziv partnera: @Model.partner.NazivPartner
        </div>
        @* <div class="col-sm-1 text-right">
            <a asp-action="Edit"
               asp-route-id="@Model.IdDokumenta"
               target="_blank"
               class="btn btn-warning btn-sm" title="Ažuriraj"><i class="fas fa-edit"></i></a>
        </div> *@
        @* <form asp-action="Delete" method="post"
              asp-route-page="@ViewBag.Page"
              asp-route-sort="@ViewBag.Sort"
              asp-route-ascending="@ViewBag.Ascending"
              asp-route-filter="@ViewBag.Filter">
            <input type="hidden" name="IdDokumenta" value="@Model.IdDokumenta" />
            <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši"><i class="fas fa-trash-alt"></i></button>
        </form> *@
        <div class="col-sm-1 text-left">
            <a class="btn btn-sm btn-primary cancel"
               asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               title="Povratak na popis partnera">
                <i class="fas fa-undo-alt">povratak</i>
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    @{
                        string[] nazivi = { "IdSuradnik", "OIB", "Mobitel", "Ime", "Prezime", "Email", "Stranka", "Kvalifikacija" };
                        for (int i = 0; i < nazivi.Length; i++)
                        {
                            <th class="text-center">
                                @nazivi[i]
                            </th>
                        }
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 0;
                }
                @foreach (var zadatak in Model.suradnici.suradnici)
                {
                    <tr>
                        <td class="text-left col-sm-4">
                            @zadatak.IdSuradnik
                        </td>
                        <td class="text-right col-sm-1">
                            @zadatak.Oib
                        </td>
                        <td class="text-center col-sm-1">
                            @zadatak.Mobitel
                        </td>
                        <td class="text-right col-sm-2">
                            @zadatak.Ime
                        </td>
                        <td class="text-right col-sm-2">
                            @zadatak.Prezime
                        </td>
                        <td class="text-right col-sm-2">
                            @zadatak.Mail
                        </td>
                        <td class="text-right col-sm-2">
                            @zadatak.Stranka
                        </td>
                        <td class="text-center">
                            @Model.suradnici.nazivKvalifikacije[counter++]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
