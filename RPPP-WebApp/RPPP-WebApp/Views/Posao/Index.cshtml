@model RPPP_WebApp.Controllers.PosaoViewModel

<h2>Popis Poslova</h2>
<a asp-action="Create">Unos novog Posla</a>

<pager page-info="@Model.PagingInfo" page-action="Index" page-title="Unesite željenu stranicu" class="float-end">
</pager>

<table class="table table-sm table-striped table-hover" id="tabledrzave">
    <thead>
        <tr>
       
            <th>
                <a asp-route-sort="1" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 1 ? !Model.PagingInfo.Ascending : true)">
                    Oznaka posla
                </a>
            </th>
            <th>
                <a asp-route-sort="2" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 2 ? !Model.PagingInfo.Ascending : true)">
                    Opis
                </a>
            </th>
            <th>
                <a asp-route-sort="2" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Predviđeno vrijeme trajanja (dani)
                </a>
            </th>
            <th>
                <a asp-route-sort="2" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 4 ? !Model.PagingInfo.Ascending : true)">
                    Uloga
                </a>
            </th>
            <th>
                <a asp-route-sort="2" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 5 ? !Model.PagingInfo.Ascending : true)">
                    Vrsta posla
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 0;
        }
        @foreach (var poslovi in Model.poslovi)
        {

            <tr>
                <td class="text-center">@poslovi.IdPosao</td>
                <td class="text-left">@poslovi.Opis</td>
                <td class="text-center">@poslovi.PredVrTrajanjaDani</td>
                <td class="text-left">@poslovi.Uloga</td>
                <td class="text-left">@Model.vrstaPosla[counter++]</td>

                <td class="btn-group">
                    <a asp-action="Edit"
                       asp-route-id="@poslovi.IdPosao"
                       asp-route-page="@Model.PagingInfo.CurrentPage"
                       asp-route-sort="@Model.PagingInfo.Sort"
                       asp-route-ascending="@Model.PagingInfo.Ascending"
                       class="btn btn-sm" title="Ažuriraj"><i class="fas fa-edit"></i>Uredi</a>

                    <form asp-action="Delete" method="post"
                          asp-route-id="@poslovi.IdPosao"
                          asp-route-page="@Model.PagingInfo.CurrentPage"
                          asp-route-sort="@Model.PagingInfo.Sort"
                          asp-route-ascending="@Model.PagingInfo.Ascending">
                        <input type="hidden" name="OznDrzave" value="@poslovi.IdPosao" />
                        <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši">
                            Obriši
                        </button>
                    </form>
                </td>
            </tr>

        }
    </tbody>

</table>

