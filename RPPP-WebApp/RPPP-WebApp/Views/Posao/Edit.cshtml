@model RPPP_WebApp.Models.Posao

@{
    ViewBag.Title = "Ažuriranje posla";
}

<form asp-route-id="@Model.IdPosao"
      asp-route-page="@ViewBag.Page"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>
    @*Ne koristi se, jer se ne rekonstruira cijela država, već se samo koristi id koji je već u parametrima route*@
    @*<input type="hidden" asp-for="OznDrzave" />*@
    <div class="form-group">
        <label asp-for="Opis"></label>
        <div><span asp-validation-for="Opis" class="text-danger"></span></div>
        <input asp-for="Opis" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PredVrTrajanjaDani"></label>
        <div><span asp-validation-for="PredVrTrajanjaDani" class="text-danger"></span></div>
        <input asp-for="PredVrTrajanjaDani" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Uloga"></label>
        <div><span asp-validation-for="Uloga" class="text-danger"></span></div>
        <input asp-for="Uloga" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Suradnik" class="form-label">Suradnici koji rade na poslu</label>
        <select class="form-control" asp-for="Suradnik" asp-items="ViewBag.SuradniciPopis">
            <option disabled selected value="">Odaberite suradnike</option>
        </select>
        <div class="form-text"><span asp-validation-for="Suradnik" class="text-danger"></span></div>
    </div>
    <div class="mb-3">
        <label asp-for="IdVrstaPosao" class="form-label">Vrsta poslova</label>
        <select class="form-control" asp-for="IdVrstaPosao" asp-items="ViewBag.PosloviVrste">
            <option disabled selected value="">Odaberite vrstu posla</option>
        </select>
        <div class="form-text"><span asp-validation-for="IdVrstaPosao" class="text-danger"></span></div>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>

